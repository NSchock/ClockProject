<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.shockwave.clockproj"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:targetSdkVersion="16"
              android:minSdkVersion="11"/>
    <application android:label="Clock Project"
                 android:icon="@drawable/ic_launcher"
                 android:theme="@android:style/Theme.Holo"
                 android:uiOptions="splitActionBarWhenNarrow">
        <activity android:name="ClockMain"
                  android:label="@string/app_name"
                  android:launchMode="singleInstance"
                  android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <receiver android:label="Clock Project Stopwatch"
                  android:name=".StopwatchWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="com.shockwave.clockproj.StopwatchWidgetProvider.ACTION_STOPWATCH_WIDGET_START"/>
                <action android:name="com.shockwave.clockproj.StopwatchWidgetProvider.ACTION_STOPWATCH_WIDGET_STOP"/>
                <action android:name="com.shockwave.clockproj.StopwatchWidgetProvider.ACTION_STOPWATCH_WIDGET_RESET"/>

            </intent-filter>
            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/stopwatch_widget_info"/>
        </receiver>
        <service android:name=".StopwatchWidgetService"
                 android:id="@+id/SW_SERVICE"
                 android:permission="android.permission.BIND_REMOTEVIEWS">
        </service>
        <receiver android:label="Clock Project Timer"
                  android:name=".TimerWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="com.shockwave.clockproj.TimerWidgetProvider.ACTION_TIMER_WIDGET_START"/>
                <action android:name="com.shockwave.clockproj.TimerWidgetProvider.ACTION_TIMER_WIDGET_STOP"/>
                <action android:name="com.shockwave.clockproj.TimerWidgetProvider.ACTION_TIMER_WIDGET_RESET"/>
                <action android:name="com.shockwvae.clockproj.TimerWidgetProvider.ACTION_TIMER_WIDGET_SET_TIME"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/timer_widget_info"/>
        </receiver>
        <service android:name=".TimerWidgetService"
                 android:id="@+id/TIMER_SERVICE"
                 android:permission="android.permission.BIND_REMOTEVIEWS">
        </service>
        <service android:name=".StopwatchService"
                 android:id="@+id/STOPWATCH_SERVICE"
                 android:permission="android.permission.BIND_REMOTEVIEWS">
        </service>
        <receiver android:name="com.shockwave.clockproj.StopwatchFragment$StopwatchReceiver">
            <intent-filter>
                <action android:name="com.shockwave.clockproj.StopwatchService.START_ACTION"/>
            </intent-filter>
        </receiver>
        <service android:name=".TimerService"
                 android:id="@+id/TIMER_SERVICE"
                 android:permission="android.permission.BIND_REMOTEVIEWS">
        </service>
        <receiver android:name="com.shockwave.clockproj.TimerFragment$TimerReceiver">
            <intent-filter>
                <action android:name="com.shockwave.clockproj.TimerService.START_ACTION"/>
            </intent-filter>
        </receiver>
        <activity android:name=".TimerWidgetDialogActivity"
                  android:theme="@android:style/Theme.Holo.Dialog"
                  android:launchMode="singleInstance"
                  android:excludeFromRecents="true"/>
    </application>
</manifest>
